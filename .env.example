# API Keys for LLM Resume Tailoring
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === LOCAL LLM SETTINGS (NEW!) ===
# Provider: ollama, lmstudio, transformers, or cloud
LLM_PROVIDER=ollama

# Local LLM Configuration
LOCAL_LLM_PROVIDER=ollama
LOCAL_LLM_MODEL=llama2

# Optional: Custom API endpoints
OLLAMA_URL=http://localhost:11434
LM_STUDIO_URL=http://localhost:1234

# LLM Performance settings
LOCAL_LLM_TEMPERATURE=0.3
LOCAL_LLM_MAX_TOKENS=2000
LOCAL_LLM_TIMEOUT=120

# Fallback behavior (smart, mock, or cloud)
LOCAL_LLM_FALLBACK=smart

# Database Configuration
DATABASE_URL=sqlite:///data/jobs.db

# Application Limits
MAX_APPLICATIONS_PER_DAY=50
DELAY_BETWEEN_APPLICATIONS=300
MAX_CONCURRENT_BROWSERS=3

# Browser Settings
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30
IMPLICIT_WAIT=10

# Job Search Preferences
DEFAULT_LOCATION=Toronto, ON, Canada
DEFAULT_KEYWORDS=data analyst,business analyst,financial analyst
SALARY_MIN=60000
SALARY_MAX=120000

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/app.log

# Dashboard
DASHBOARD_PORT=8501
DASHBOARD_HOST=localhost

# Security
ENCRYPTION_KEY=generate_a_secure_key_here
SESSION_TIMEOUT=3600

# Rate Limiting
REQUESTS_PER_MINUTE=30
COOLDOWN_PERIOD=900

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com